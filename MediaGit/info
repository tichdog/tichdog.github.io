.container{
  /*flex-direction: column; !* Направление главной оси *!*/
  display: flex; /*Родитель для flex item*/
  flex-wrap: nowrap; /* Перенос на новую строку если задать wrap*/
  gap: 5em; /* Растояние между элементами */
  /* Выравнивание вдоль оси */
  justify-content: center; /* Основной */
  align-items: center; /* Побочной */
  align-content: center; /* Если элемент на несколько строк */

}

.item{
  /* Выравнивание вдоль оси */
  align-self: center; /* Индивидуальное выравнивание */
  flex-grow: 1; /* Сколько занимает отностельно других свободного места */
  flex-shrink: 2; /* Сколько может дать места, если необходимо другому элементу */
  order: 1; /* Порядок элементов */
}